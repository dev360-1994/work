@model MVC_Identity.DTO.ForgotPasswordModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot Password</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="login_layout">
        <div class="white_box">
            <form asp-action="ForgotPassword" method="post">
                <div class="mb-3">
                    <label asp-for="Email">Email</label>
                    <input type="text" asp-for=" Email" class="form-control" />
                    <span class="error text-danger" asp-validation-for="Email"></span>
                    @if (TempData["msg"] != null)
                    {
                        <span class="error text-danger"> @TempData["msg"] </span>
                    }
                </div>
                <button type="submit" class="btn w-100 btn-primary">Submit</button>
                <div class="text-center mt-1">
                    <a asp-action="Login">Login</a>
                </div>
            </form>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}