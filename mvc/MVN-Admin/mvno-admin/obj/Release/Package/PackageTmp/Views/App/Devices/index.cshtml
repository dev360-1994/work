<script type="text/javascript">

    $(document).ready(function () {

        var selectedTabStripIndex = 0;
        // Assuming you have a variable for your TabStrip
        var tabstrip = $("#tabstrip").data("kendoTabStrip");
        // Attach a click event handler to the tab
        tabstrip.bind("select", function (e) {
            var x = e.item;
            selectedTabStripIndex = $(x).index();
            $('#advanceSearchBtn').attr('data-bs-target', getOffcanvasTarget());
        });

        // Function to get the offcanvas target based on the selected tab
        function getOffcanvasTarget() {
            return selectedTabStripIndex === 1 ? "#canvasSIMsSearch" :
                selectedTabStripIndex === 2 ? "#canvasDeviceTemplateSearch" :
                    "#canvasDeviceSearch";
        }
    });

</script>
