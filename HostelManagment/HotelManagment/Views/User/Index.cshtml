@model IEnumerable<HotelManagment.Database_Model.User>

@{
    ViewBag.Title = "Index";
}
<div class="col-md-12 grid-margin mb-30">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h4 class="font-weight-bold mb-0">Registered Users</h4>
        </div>
        <div>
            <a href="/AddEditUser" class="btn btn-primary btn-icon-text btn-rounded show-loader"><i class="ti-plus btn-icon-prepend"></i>Add New User</a>
        </div>
    </div>
</div>


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body p-0">
            <p class="card-title">All Users</p>
            <div class="text-muted font-weight-light cstm-card-body">
                <table id="tblhistory" class="datatable table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Mobile</th>
                            <th>Date Of Birth</th>
                            <th>Gender</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @{foreach (var cors in Model)
                            {
                                <tr>
                                    <td>@cors.Id</td>
                                    <td>@cors.FirstName</td>
                                    <td>@cors.Email</td>
                                    <td>@cors.Mobile</td>
                                    <td>@cors.Dob</td>
                                    <td>@cors.Gender</td>
                                    <td><a href="/AddEditUser?Id=@cors.Id">Edit</a></td>
                                    <td>
                                        @{if (cors.IsProfileCompleted == true)
                                            {
                                                <a href="/MyProfile?Id=@cors.Id">View Profile</a>
                                            }
                                        }
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <script src="~/content/js/plugins/jquery.dataTables.min.js"></script>
    <script src="~/content/js/plugins/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.datatable').DataTable();
        });

    </script>
}